{
  "mcpServers": {
    "filesystem": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem", "<YOUR_PROJECT_PATH>/sandbox"],
      "description": "[核心] 本地文件系统 - Manus-style Planning 规划文件存储",
      "enabled": true,
      "timeout": 60,
      "_comment": "必需！请将 <YOUR_PROJECT_PATH> 替换为实际项目路径"
    },
    "code-execution": {
      "type": "stdio",
      "command": "uvx",
      "args": [
        "--no-cache",
        "code-execution-mcp"
      ],
      "description": "代码执行服务 - 支持终端命令和 Python 代码运行，提供会话管理和跨平台支持",
      "enabled": true,
      "timeout": 120
    },
    "trends-hub": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "mcp-trends-hub@1.6.2"],
      "description": "热点趋势聚合 MCP 服务器，获取各平台热搜数据",
      "enabled": true,
      "timeout": 60
    },
    "example-sse-server": {
      "type": "sse",
      "url": "http://localhost:8080/sse",
      "description": "SSE 类型 MCP 服务器示例",
      "enabled": false,
      "timeout": 60,
      "_comment": "SSE 服务器需要先启动服务"
    }
  }
}
